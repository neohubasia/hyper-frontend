          .featured__item
            .featured__item__pic.set-bg(data-setbg='https://via.placeholder.com/270x270/f5f5f5/f5f5f5')
              ul.featured__item__pic__hover
                li
                  a(href='#')
                    i.fa.fa-heart
                li
                  a(href='#')
                    i.fa.fa-shopping-cart
            .featured__item__text
