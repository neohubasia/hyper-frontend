block block-content
  // Hero Section Begin
  section.hero.mt-4
    include ../layout/layout-search-1
  // Categories Section Begin
  section.categories#commonCategorySlider
    .container
      .row
        .categories__slider.owl-carousel
          .col-lg-3
            .categories__item.set-bg(data-setbg='https://via.placeholder.com/270x270/f5f5f5/f5f5f5')
              h5
                a(href='#') VIEW CATEGORY

          
