extends ../layout/layout-main
block block-content
  // Hero Section Begin
  section.hero.hero-normal.mt-4
    include ../layout/layout-search-2
  // Breadcrumb Section Begin
  section.breadcrumb-section.set-bg(data-setbg='img/breadcrumb/breadcrumb.jpg')
    .container
      .row
        .col-lg-12.text-center
          .breadcrumb__text
            h2 Contact Us
            .breadcrumb__option
              a(href='./index.html') Home
              span Contact Us
  // Breadcrumb Section End
  // Contact Section Begin
  section.contact.spad
    .container
      .row
        .col-lg-3.col-md-3.col-sm-6.text-center
          .contact__widget
            span.icon_phone
            h4 Phone
            p +01-3-8888-6868
        .col-lg-3.col-md-3.col-sm-6.text-center
          .contact__widget
            span.icon_pin_alt
            h4 Address
            p 60-49 Road 11378 New York
        .col-lg-3.col-md-3.col-sm-6.text-center
          .contact__widget
            span.icon_clock_alt
            h4 Open time
            p 10:00 am to 23:00 pm
        .col-lg-3.col-md-3.col-sm-6.text-center
          .contact__widget
            span.icon_mail_alt
            h4 Email
            p hello@colorlib.com
  // Contact Section End
  // Map Begin
  .map
    iframe(src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d49116.39176087041!2d-86.41867791216099!3d39.69977417971648!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x886ca48c841038a1%3A0x70cfba96bf847f0!2sPlainfield%2C%20IN%2C%20USA!5e0!3m2!1sen!2sbd!4v1586106673811!5m2!1sen!2sbd' height='500' style='border:0;' allowfullscreen='' aria-hidden='false' tabindex='0')
    .map-inside
      i.icon_pin
      .inside-widget
        h4 New York
        ul
          li Phone: +12-345-6789
          li Add: 16 Creek Ave. Farmingdale, NY
  // Map End
  // Contact Form Begin
  .contact-form.spad
    .container
      .row
        .col-lg-12
          .contact__form__title
            h2 Leave Message
      form(action='#')
        .row
          .col-lg-6.col-md-6
            input(type='text' placeholder='Your name')
          .col-lg-6.col-md-6
            input(type='text' placeholder='Your Email')
          .col-lg-12.text-center
            textarea(placeholder='Your message')
            button.site-btn(type='submit') SEND MESSAGE
  // Contact Form End