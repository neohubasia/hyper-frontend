extends ../layout/layout-main
block block-content
  // Hero Section Begin
  section.hero.hero-normal.mt-4
    include ../layout/layout-search-2
  // Breadcrumb Section Begin
  section.breadcrumb-section.set-bg#breadCrumb(data-setbg='https://via.placeholder.com/1920x150/f5f5f5/f5f5f5')
    .container
      .row
        .col-lg-12.text-center
          .breadcrumb__text
            h2 Available Products
            .breadcrumb__option
              a(href='/') Home
              span Available Products
  // Breadcrumb Section End
  // Product Section Begin
  section.product.spad
    .container
      .row
        .col-lg-12
          .filter__item
            .row
              .col-lg-4.col-md-5
                .filter__sort
                  span Sort By
                  select
                    option(value='0') Higher
                    option(value='0') Lower
                    option(value='0') A-Z
                    option(value='0') Z-A
              .col-lg-4.col-md-4
                .filter__found
                  h6
                    span#countProduct 0
                    |  Products found
              .col-lg-4.col-md-3
                .filter__option
                  span.icon_grid-2x2
            #preFilterProduct.d-none
              .col-lg-4.col-md-6.col-sm-6
                .product__item
                  .product__item__pic.set-bg(data-setbg='https://via.placeholder.com/270x270/f5f5f5/555')
                    ul.product__item__pic__hover
                      li
                        a(href='#')
                          i.fa.fa-cube
                      li
                        a(href='#')
                          i.fa.fa-heart
                      li
                        a(href='#')
                          i.fa.fa-shopping-cart
                  .product__item__text
                    h6
                      a(href='#') Product Name
                    h5 0MMK

            #filterProduct.row
            #filterPagings.col-sm-12

block scripts
  script(src="../js/pages/shop.js")