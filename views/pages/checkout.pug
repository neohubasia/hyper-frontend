extends ../layout/layout-main
block block-content
  // Hero Section Begin
  section.hero.hero-normal.mt-4
    include ../layout/layout-search-2
  // Breadcrumb Section Begin
  section.breadcrumb-section.set-bg(data-setbg='https://via.placeholder.com/1920x150/555/f5f5f5')
    .container
      .row
        .col-lg-12.text-center
          .breadcrumb__text
            h2 Checkout
            .breadcrumb__option
              a(href='./index.html') Home
              span Checkout
  // Breadcrumb Section End
  // Checkout Section Begin
  section.checkout.spad
    .container
      .row
        .col-lg-12
          h6
            span.icon_tag_alt
            |  Have a coupon? 
            a(href='#') Click here
            |  to enter your code
      .checkout__form
        h4 Billing Details
        form(action='#')
          .row
            .col-lg-8.col-md-6
              .row
                .col-lg-6
                  .checkout__input
                    p
                      | Fist Name
                      span *
                    input(type='text')
                .col-lg-6
                  .checkout__input
                    p
                      | Last Name
                      span *
                    input(type='text')
              .checkout__input
                p
                  | Country
                  span *
                input(type='text')
              .checkout__input
                p
                  | Address
                  span *
                input.checkout__input__add(type='text' placeholder='Street Address')
                input(type='text' placeholder='Apartment, suite, unite ect (optinal)')
              .checkout__input
                p
                  | Town/City
                  span *
                input(type='text')
              .checkout__input
                p
                  | Country/State
                  span *
                input(type='text')
              .checkout__input
                p
                  | Postcode / ZIP
                  span *
                input(type='text')
              .row
                .col-lg-6
                  .checkout__input
                    p
                      | Phone
                      span *
                    input(type='text')
                .col-lg-6
                  .checkout__input
                    p
                      | Email
                      span *
                    input(type='text')
              .checkout__input__checkbox
                label(for='acc')
                  | Create an account?
                  input#acc(type='checkbox')
                  span.checkmark
              p
                | Create an account by entering the information below. If you are a returning customer
                | please login at the top of the page
              .checkout__input
                p
                  | Account Password
                  span *
                input(type='text')
              .checkout__input__checkbox
                label(for='diff-acc')
                  | Ship to a different address?
                  input#diff-acc(type='checkbox')
                  span.checkmark
              .checkout__input
                p
                  | Order notes
                  span *
                input(type='text' placeholder='Notes about your order, e.g. special notes for delivery.')
            .col-lg-4.col-md-6
              .checkout__order
                h4 Your Order
                .checkout__order__products
                  | Products 
                  span Total
                ul
                  li
                    | Vegetable&rsquo;s Package 
                    span $75.99
                  li
                    | Fresh Vegetable 
                    span $151.99
                  li
                    | Organic Bananas 
                    span $53.99
                .checkout__order__subtotal
                  | Subtotal 
                  span $750.99
                .checkout__order__total
                  | Total 
                  span $750.99
                .checkout__input__checkbox
                  label(for='acc-or')
                    | Create an account?
                    input#acc-or(type='checkbox')
                    span.checkmark
                p
                  | Lorem ipsum dolor sit amet, consectetur adip elit, sed do eiusmod tempor incididunt
                  | ut labore et dolore magna aliqua.
                .checkout__input__checkbox
                  label(for='payment')
                    | Check Payment
                    input#payment(type='checkbox')
                    span.checkmark
                .checkout__input__checkbox
                  label(for='paypal')
                    | Paypal
                    input#paypal(type='checkbox')
                    span.checkmark
                button.site-btn(type='submit') PLACE ORDER
  // Checkout Section End