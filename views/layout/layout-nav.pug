// Humberger Begin
.humberger__menu__overlay
.humberger__menu__wrapper
  .humberger__menu__logo
    a(href='#')
      img.img.border-bottom(src='img/logo/it-marketplace-trans-500x280.png' alt='')
  .humberger__menu__cart
    ul
      li
        a(href='#')
          i.fa.fa-heart
          span 1
      li
        a(href='#')
          i.fa.fa-shopping-bag
          span 3
    .header__cart__price
      | Total Price: 
      span $150.00
  .humberger__menu__widget
    .header__top__right__language
      img(src='img/language/language.png' alt='')
      div English
      span.arrow_carrot-down
      ul
        li
          a(href='#') Spanis
        li
          a(href='#') English

    .header__top__right__auth
        if auth
          a.ml-3(href='#')
            i.fa.fa-user
            span= auth.displayName
        else 
          a.ml-3(href='./auth/login')
            i.fa.fa-sign-in
            span  Login
  nav.humberger__menu__nav.mobile-menu
    ul
      li.active
        a(href='./') Home
      li
        a(href='./shop') Shop
      li
        a(href='#') Pages
        ul.header__menu__dropdown
          li
            a(href='./shop-details') Shop Details
          li
            a(href='./shop-cart') Shoping Cart
          li
            a(href='./checkout') Check Out
          li
            a(href='./blog-details') Blog Details
      li
        a(href='./blog') Blog
      li
        a(href='./contact') Contact
      if auth
        li
          a(href='/auth/logout') Logout
  #mobile-menu-wrap
  .header__top__right__social
    a(href='#')
      i.fa.fa-facebook
    a(href='#')
      i.fa.fa-twitter
    a(href='#')
      i.fa.fa-linkedin
    a(href='#')
      i.fa.fa-pinterest-p
  .humberger__menu__contact
    ul
      li
        i.fa.fa-envelope
        |  team@unlocksth.com
      li Free Shipping for all Order of $99
// Humberger End
// Header Section Begin
.header__top
  .container
    .row
      .col-lg-6.col-md-6
        .header__top__left
          ul
            li
              i.fa.fa-envelope
              |  team@unlocksth.com
            li Free Shipping for all Order of $99
      .col-lg-6.col-md-6
        .header__top__right
          .header__top__right__social
            a(href='#')
              i.fa.fa-facebook
            a(href='#')
              i.fa.fa-twitter
            a(href='#')
              i.fa.fa-linkedin
            a(href='#')
              i.fa.fa-pinterest-p
          .header__top__right__language
            img(src='img/language/language.png' alt='')
            div English
            span.arrow_carrot-down
            ul
              li
                a(href='#') Spanis
              li
                a(href='#') English
          if auth
            .header__top__right__auth.mr-3.isUser
              a(href='#')
                i.fa.fa-user
                span= auth.displayName
          .header__top__right__auth.isLogin
            if auth
              a(href='./auth/logout')
                i.fa.fa-sign-out
                span Logout
            else 
              a(href='./auth/login')
                i.fa.fa-sign-in
                span  Login
