// Humberger Begin
.humberger__menu__overlay
.humberger__menu__wrapper
  .humberger__menu__logo
    a(href='#')
      img.img.border-bottom(src='../img/logo/hyper-marktetplace-transparent.png' alt='')
  .humberger__menu__cart
    ul
      li.wishItemCount
        a(href='#')
          i.fa.fa-heart
          span 0
      li.shopCartCount
        a(href='./shop-cart')
          i.fa.fa-shopping-bag
          span 0
    .header__cart__price
      | Total Price: 
      span 0MMk
  .humberger__menu__widget
    .header__top__right__language
      //- img(src='img/language/language.png' alt='')
      span.fa.fa-language
      span#choose_me En
      span.arrow_carrot-down
      ul
        li
          a(href='#' onclick="setLanguage('en')") English
        li
          a(href='#' onclick="setLanguage('my')") Myanmar

    .header__top__right__auth
      if authUser
        a.ml-3(href='#')
          i.fa.fa-user
          span= authUser.displayName
      else 
        a.ml-3(href='/auth/login')
          i.fa.fa-sign-in
          span  Login
  nav.humberger__menu__nav.mobile-menu
    ul
      li.home__menu__link.active
        a(href='/') Home
      li.shop__menu__link
        a(href='/shop') Shop
      li.store__menu__link
        a(href='/official-store') Official Store
      li.pages__menu__link
        a(href='#') Today's Pages
        ul.header__menu__dropdown
          li.popular_item__menu__link
            a(href='/popular-item') Popular Item
          li.discount_item__menu__link
            a(href='/discount-item') Discount Item
          li.latest_item__menu__link
            a(href='/latest-item') Latest Item
      li.contact__menu__link
        a(href='/contact') Contact
      if authUser
        li
          a(href='/auth/logout') Logout
  #mobile-menu-wrap
  .header__top__right__social
    a(href='#')
      i.fa.fa-facebook
    a(href='#')
      i.fa.fa-twitter
    a(href='#')
      i.fa.fa-linkedin
    a(href='#')
      i.fa.fa-pinterest-p
  .humberger__menu__contact
    ul
      li
        i.fa.fa-envelope
        |  team@unlocksth.com
      li Free Shipping for all Order of $99
// Humberger End
